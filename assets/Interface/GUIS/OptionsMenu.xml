<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    
<useControls filename="nifty-default-controls.xml" />
<useStyles filename="nifty-default-styles.xml" />

<!--
To change this template, choose Tools | Templates
and open the template in the editor.
-->


    <screen id="OptionsMenu" controller="menu.OptionsMenu">
        <layer id="background"  childLayout="vertical" >
            
        </layer>
        
        
        <layer id="foreground" childLayout="absolute">
            <panel id="BackButtonPanel" width="10%" height="7%" x="1%" y="1%" childLayout="vertical" visibleToMouse = "true">
               <image filename="Interface/General/BackButton.png" width="100%" height="100%" visibleToMouse="true">
                <interact onClick="goBack()" />
               </image>
            </panel>
            
            <panel id="VolumePanel" width="50%" height="5%" x="15%" y="20%" childLayout="center" visibleToMouse = "true">
                <control id="musicVolumeSlider" name="horizontalSlider" width="100%" min="-0.01" max="1.01" initial="1.0" stepSize="0.01" buttonStepSize="0.01" valign="center" />
            </panel>
            
            <panel id="SFXPanel" width="50%" height="5%" x="15%" y="30%" childLayout="center" visibleToMouse="true">
                <control id="sfxVolumeSlider" name="horizontalSlider" width="100%" min="-0.01" max="1.01" initial="1.0" stepSize="0.01" buttonStepSize="0.01" valign="center"/>
            </panel>
            
            <panel id="VoicePanel" width="50%" height="5%" x="15%" y="40%" valign="center" childLayout="center">
                <control id="voiceVolumeSlider" name="horizontalSlider" width="100%" min="-0.01" max="1.01" initial="1.0" stepSize="0.01" buttonStepSize="0.01" valign="center"/>
            </panel>
            
            <panel id="MutePanel" width="25%" height="5%" x="70%" y="20%" childLayout="center" visibleToMouse = "true" >
                <text id="CurrentMusicVolume" font="Interface/Fonts/Kalinga.fnt" text="Music Volume: 100%" valign="center"/>   
                <interact onClick="muteMusic()" />
            </panel>
            
            <panel id="SFXVolumeLabelPanel" width="25%" height="5%" x="70%" y="30%" childLayout="center">
                <text id="CurrentSFXVolume" font="Interface/Fonts/Kalinga.fnt" text="SFX Volume: 100%" valign="center"/>
            </panel>
            
            <panel id="VoiceVolumeLabelPanel" width="25%" height="5%" x="70%" y="40%" childLayout="center">
                <text id="CurrentVoiceVolume" font="Interface/Fonts/Kalinga.fnt" text="Voice Volume: 100%" valign="center"/>
            </panel>
            
            <panel id="SwitchMusicPanel" width="35%" height="25%" x="10%" y="55%" childLayout="vertical" visibleToMouse = "true">
                <image filename= "Interface/MainMenu/Extras.png" width = "100%" height = "100%" visibleToMouse = "true">
                    <interact onClick="switchMusic()" />
                </image>
            </panel>
            
            <panel id="ControlsPanel" width="50%" height="45%" x="25%" y="50%" childLayout="vertical" visibleToMouse = "true">
                <interact onClick="controlsScreen()" />
            </panel>
            
        </layer>
        
    </screen>

</nifty>
