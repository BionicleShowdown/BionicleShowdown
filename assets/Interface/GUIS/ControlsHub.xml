<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    
<useControls filename="showdown-controls/showdown-controls.xml" />
<useStyles filename="showdown-style/showdown-styles.xml" />

<!--
To change this template, choose Tools | Templates
and open the template in the editor.
-->


    <screen id="ControlsHub" controller="menu.ControlsHub" inputMapping="menu.MenuMapping">
        <layer id="background"  childLayout="vertical" >
            <panel id="MouseCatcher" width="100%" height="100%" x="0%" y="0%" visibleToMouse="true" />
        </layer>
        
        <layer id="foreground" childLayout="absolute">
            <panel id="BackButtonPanel" width="10%" height="7%" x="1%" y="1%" childLayout="vertical" visibleToMouse="true" focusable="true">
               <image id="BackButtonImage" filename="Interface/General/BackButton.png" width="100%" height="100%" visibleToMouse="true">
                   <interact onClick="goBack()" />
               </image>
            </panel>
            
            <panel id="Player1ControlsPanel" width="35%" height="35%" x="10%" y="10%" childLayout="vertical" visibleToMouse="true">
                <interact onClick="player1Controls()" />
            </panel>
            
            <panel id="Player2ControlsPanel" width="35%" height="35%" x="55%" y="10%" childLayout="vertical" visibleToMouse="true">
                
            </panel>
            
            <panel id="Player3ControlsPanel" width="35%" height="35%" x="10%" y="55%" childLayout="vertical" visibleToMouse="true">
                
            </panel>
            
            <panel id="Player4ControlsPanel" width="35%" height="35%" x="55%" y="55%" childLayout="vertical" visibleToMouse="true">
                
            </panel>
            
        </layer>
    
    </screen>

</nifty>
