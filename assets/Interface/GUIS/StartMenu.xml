<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="StartScreen" controller="bs.StartMenu" inputMapping="menu.MenuMapping">
        <layer id="background" childLayout="center">
            <image filename="Textures/Menu/StartScreen.png" width="100%" height="100%"/>
        </layer>
        <layer id="foreground"  childLayout="vertical">
            <panel id="spacer" height="65%" width="75" align="center" childLayout="horizontal">
            </panel>
            <panel id="panel_bottom" height="15%" width="75%" align="center" childLayout="horizontal" >
                <text id="startText" text="PRESS ENTER" font="Interface/Fonts/Exo.fnt" width="100%" height="100%">
                    <effect>
                        <onActive name="colorPulsate" startColor="#00000000" endColor="ffffffff" pulsateType="sin" period="4000" cycle="true" />
                    </effect>
                </text>
            </panel>
        </layer>
    </screen>
    
    
</nifty>
